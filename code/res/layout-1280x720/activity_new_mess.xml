<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#47639e" >

    <TextView
        android:id="@+id/tag2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/aboutText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="3dp"
        android:text="Enter the details"
        android:textColor="#ffffff"
        android:textSize="21sp" />

    <ImageView
        android:id="@+id/addImage"
        android:layout_width="146dp"
        android:layout_height="110dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginRight="70dp"
        android:layout_marginTop="80dp"
        android:background="#00000000"
        android:scaleType="centerCrop"
        android:src="@drawable/addmess_icon"
        android:visibility="visible" />

    <ImageView
        android:id="@+id/top"
        android:layout_width="280dp"
        android:layout_height="90dp"
        android:layout_below="@+id/tag2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        android:src="@drawable/addmess_input" />

    <ImageButton
        android:id="@+id/send"
        android:layout_width="280dp"
        android:layout_height="59dp"
        android:layout_below="@+id/top"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="36dp"
        android:background="#00000000"
        android:scaleType="centerInside"
        android:src="@drawable/addmess_send_button" />

    <EditText
        android:id="@+id/inputName"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/top"
        android:layout_alignTop="@+id/top"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="9dp"
        android:background="#00000000"
        android:ems="10"
        android:hint="输入宝贝名称"
        android:inputType="text"
        android:textColor="#9d9a9a"
        android:textColorHint="#cdcacb"
        android:textSize="19sp" />

    <EditText
        android:id="@+id/inputIntro"
        android:layout_width="267dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/top"
        android:layout_alignLeft="@+id/top"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="6dp"
        android:background="#00000000"
        android:ems="10"
        android:hint="一句话介绍"
        android:inputType="text"
        android:textColor="#9d9a9a"
        android:textColorHint="#cdcacb"
        android:textSize="19sp" />

    <TextView
        android:id="@+id/aboutText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/addImage"
        android:layout_marginTop="180dp"
        android:text="填写求购信息"
        android:textColor="#ffffff"
        android:textSize="25sp" />

</RelativeLayout>