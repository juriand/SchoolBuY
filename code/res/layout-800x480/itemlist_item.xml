<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relative"
    android:layout_width="match_parent"
    android:layout_height="610dp"
    android:background="#ffffff"
    android:minHeight="?android:attr/listPreferredItemHeight" >

    <ImageView
        android:id="@+id/top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="75dp"
        android:src="@drawable/item_line_top" />

    <Button
        android:id="@+id/contact"
        android:layout_width="85dp"
        android:layout_height="24dp"
        android:layout_alignRight="@+id/like"
        android:layout_alignTop="@+id/icon"
        android:layout_marginRight="5dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/item_button"
        android:text="我要交易"
        android:textColor="#ffffff"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/changefor"
        android:layout_width="100dp"
        android:layout_height="20dp"
        android:layout_alignRight="@+id/contact"
        android:layout_below="@+id/contact"
        android:layout_centerHorizontal="true"
        android:layout_marginRight="0dp"
        android:textSize="13sp" />

    <ImageView
        android:id="@+id/photo"
        android:layout_width="280dp"
        android:layout_height="200dp"
        android:layout_below="@+id/top"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        android:scaleType="centerCrop"
        android:src="@drawable/item_image_load" />

    <TextView
        android:id="@+id/price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/itemName"
        android:layout_alignRight="@+id/like"
        android:text="价格"
        android:textColor="#8d8d8d"
        android:textSize="14sp" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/introduction"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="7dp"
        android:src="@drawable/item_line_bottom" />

    <TextView
        android:id="@+id/itemName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/photo"
        android:layout_below="@+id/top"
        android:layout_marginTop="5dp"
        android:text="宝贝名称"
        android:textColor="#8d8d8d"
        android:textSize="19sp" />

    <TextView
        android:id="@+id/introduction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/photo"
        android:layout_below="@+id/photo"
        android:layout_marginTop="5dp"
        android:text="简介"
        android:textColor="#8d8d8d"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/like"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/photo"
        android:layout_alignTop="@+id/imageView2"
        android:layout_marginRight="2dp"
        android:layout_marginTop="13dp"
        android:text="收藏"
        android:textColor="#8d8d8d" />

    <ImageView
        android:id="@+id/icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/itemName"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="11dp"
        android:layout_marginTop="18dp" />

    <TextView
        android:id="@+id/username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/contact"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@+id/icon"
        android:text="用户名"
        android:textColor="#8d8d8d"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/title1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/like"
        android:layout_alignBottom="@+id/like"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="10dp"
        android:background="@drawable/item_button"
        android:text="标签1"
        android:textColor="#ffffff"
        android:visibility="visible" />

    <TextView
        android:id="@+id/tag2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/title1"
        android:layout_alignBottom="@+id/title1"
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@+id/title1"
        android:background="@drawable/item_button"
        android:text="标签2"
        android:textColor="#ffffff"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/tag3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tag2"
        android:layout_alignBottom="@+id/tag2"
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@+id/tag2"
        android:background="@drawable/item_button"
        android:text="标签3"
        android:textColor="#ffffff"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/aboutText"
        android:layout_width="match_parent"
        android:layout_height="13dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="414dp" />

</RelativeLayout>