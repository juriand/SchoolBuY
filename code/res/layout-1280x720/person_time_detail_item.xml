<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.example.schoolbuy"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageView
        android:id="@+id/background"
        android:layout_width="300dp"
        android:layout_height="150dp"
        android:layout_marginLeft="50dp"
        android:scaleType="centerInside"
        android:src="@drawable/person_time_blank" />

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/itemIcon"
        android:layout_marginLeft="41dp"
        android:layout_toRightOf="@+id/itemIcon"
        android:text="由....购买" />

    <TextView
        android:id="@+id/price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/name"
        android:layout_below="@+id/name"
        android:text="物品价格" />

    <ImageView
        android:id="@+id/top"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/date"
        android:layout_alignParentTop="true"
        android:layout_marginTop="30dp"
        android:src="@drawable/item_line_top" />

    <com.schoolbuy.view.CircleImageView
        android:id="@+id/itemIcon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignLeft="@+id/top"
        android:layout_below="@+id/top"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        app:border_color="#ffffff"
        app:border_width="2dp" />

    <TextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/background"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="12dp"
        android:text="交易日期" />

    <Button
        android:id="@+id/chat"
        android:layout_width="80dp"
        android:layout_height="26dp"
        android:layout_alignLeft="@+id/top"
        android:layout_below="@+id/itemIcon"
        android:layout_marginTop="8dp"
        android:background="@drawable/item_button"
        android:text="联系对方"
        android:textColor="#ffffff"
        android:textSize="12sp" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/background"
        android:layout_alignRight="@+id/imageView2"
        android:layout_marginRight="15dp"
        android:src="@drawable/person_time_timeline" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignBottom="@+id/top"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="8dp"
        android:src="@drawable/person_time_spot" />

</RelativeLayout>
